{
   "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "lib": [
         "DOM",
         "ESNext"
      ],
      "jsx": "react-jsx",
      "moduleResolution": "node",
      "baseUrl": "src",
      "paths": {
         "@ui/*": [
            "components/ui/*"
         ],
         "@assets/*": [
            "assets/*"
         ],
         "@data/*": [
            "shared/data/*"
         ],
         "@contexts/*": [
            "shared/contexts/*"
         ],
         "@hooks/*": [
            "shared/hooks/*"
         ],
         "@utils/*": [
            "shared/utils/*"
         ],
         "@components/*": [
            "components/*"
         ]
      },
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true,
      "noEmit": true
   },
   "include": [
      "src"
   ]
}